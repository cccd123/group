.content view:nth-child(1) image {
  width: 100%;
  height: 350rpx;
  position: relative; /* 设置相对定位 */
  z-index: 1; /* 将背景图片放在下层 */
}

.body {
  background-color: #f1f1f1;
  border-radius: 50rpx 50rpx 0 0;
  margin-top: -50rpx;
  padding: 30rpx 40rpx;
  position: relative; /* 设置相对定位 */
  z-index: 2; /* 将白色背景放在上层 */
}

/* header */
.header{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.body > view:nth-child(1) image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

/* main1 */
.main1{
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
}
.main1 text:nth-child(1){
  font-size: 45rpx;
}
.main1 text:nth-child(2){
  color: #8a8a8a;
  margin-top: 20rpx;
}
.main1 text:nth-child(3){
  color: #8a8a8a;
  margin-top: 10rpx;
}

/* main2 */
.main2{
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
}
.main2 text:nth-child(1){
  font-size: 40rpx;
  font-weight: bold;
}
.main2 .main2-item{
  display: flex;
}
.main2 .main2-item > view{
  display: flex;
  flex-direction: column;
  width: 200rpx;
  height: 150rpx;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 30rpx;
  padding: 15rpx 20rpx;
  align-items: center;
}
.main2 .main2-item > view:first-child {
  margin-left: 0;
}
.main2 .main2-item > view:last-child {
  margin-right: 0;
}

.main2 .main2-item > view > text:nth-child(1) {
  color: #8a8a8a;
  font-size: 35rpx;
  margin-top: 10rpx;
}
.main2 .main2-item > view > text:nth-child(2) {
  color: #000;
  font-size: 35rpx;
  margin-top: 20rpx;
  font-weight: bold;
}

/* 偏向 */
.body-direction {
  display: flex;
  width: 100%;
  margin-left: auto;
  align-items: center;
  border-radius: 30rpx;
  padding: 0; /* 移除内边距 */
  color: #585858;
  border: 1rpx solid #000;
  margin-top: 30rpx;
}

.body-title-name {
  flex: 1; /* 子元素均匀分配空间 */
  text-align: center; /* 文字居中 */
  padding:5rpx 5rpx; /* 调整内边距 */
  border-radius: 30rpx; /* 圆角 */
  font-size: 23rpx;
}

.active {
  color: #000;
  background-color: #cbcdcf;
  border-radius: 30rpx; /* 确保圆角与父容器一致 */
}

