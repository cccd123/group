.content{
	padding: 0 20rpx 120rpx 20rpx;
}


.body{
	display: flex;
	flex-direction: column;
	border-radius: 40rpx;
	padding-top: 15rpx;
	box-shadow: 0 4rpx 8rpx #8a8a8a;
	margin-top: 30rpx;
}
.finish{
	background-color: #d33333;
}
.underway{
	background-color: #5da0ec;
}

.body-header{
  display: flex;
  align-items: center;
  justify-content: center;
	color: #fff;
	font-size: 40rpx;
}

.body-main{
	background-color: #fff;
	margin-top: 15rpx;
	padding: 30rpx 20rpx;
	border-radius: 40rpx;
}

/* body-main第一个view */
.body-main > view:nth-child(1) {
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.body-main > view:nth-child(1) > text:nth-child(1){
	font-size: 45rpx;
	font-weight: bold;
}
.body-main > view:nth-child(1) > text:nth-child(2){
	font-size: 35rpx;
}

/* body-main第2个view */
.body-main > view:nth-child(2){
	margin-top: 35rpx;
}

/* body-main第3个view */
.body-main > view:nth-child(3){
	display: flex;
	justify-content: space-between;
	padding: 50rpx 80rpx;
}
.body-main > view:nth-child(3) > view {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.body-main > view:nth-child(3) > view > text:nth-child(2) {
	margin-top: 5rpx;
	color: #8a8a8a;
}

/* body-main第4个view */
.body-main > view:nth-child(4){
	margin-top: 35rpx;
}
.body-image1{
	width: 80rpx;
	height: 60rpx;
}
.body-image2{
	width: 60rpx;
	height: 60rpx;
}

.body-main > view:nth-child(4){
	padding: 0 20rpx;
	display: flex;
	justify-content: space-between;
}

.body-main > view:nth-child(4) > view{
	display: flex;
	flex-direction: column;
	height: 230rpx;
	width: 250rpx;
	border: 2rpx solid #e9e9e9;
	border-radius: 30rpx;
	padding: 20rpx 20rpx;
	box-shadow: 0 4rpx 12rpx #8a8a8a;
}
.body-main > view:nth-child(4) > view > text:nth-child(2){
	color: #8a8a8a;
	font-size: 45rpx;
	margin-top: 15rpx;
}
.body-main > view:nth-child(4) > view > text:nth-child(3){
	font-weight: bold;
	font-size: 70rpx;
	text-align: end;
	margin-top: 10rpx;
}

/* body-main第5个view */
.body-main > view:nth-child(5){
	margin: 50rpx 20rpx 0 20rpx;
	border: 2rpx solid #8a8a8a;
	padding: 15rpx 25rpx;
	justify-content: center;
	align-items: center;
	border-radius: 50rpx;
}

/* body-main第6个view */
.body-main > view:nth-child(6){
	margin-top: 35rpx;
	display: flex;
	padding: 0 0 0 220rpx;
}
.body-main > view:nth-child(6) > button{
	width: 200rpx;
	color: #fff;
	border-radius: 50rpx;
	font-size: 35rpx;
}
.body-main > view:nth-child(6) > button:nth-child(1){
	background-color: #d33333;
}
.body-main > view:nth-child(6) > button:nth-child(2){
	background-color: #42d07c;
}
