.content {
	padding: 100rpx 30rpx 50rpx 30rpx;
}

.accreditation {
  border: 1rpx solid #8a8a8a;
  height: 350rpx;
  border-radius: 50rpx;
  display: flex; 
  justify-content: center; 
  align-items: center; 
  box-shadow: 0 8rpx 12rpx rgba(0, 0, 0, 0.1);
}

.accreditation > text {
  font-size: 40rpx;
  font-weight: bold;
  color: #8a8a8a;
  text-align: center; /* 文字水平居中 */
}

.image{
  width: 100%;
  height: 350rpx;
  border-radius: 50rpx;
}

/* body */
.body{
	display: flex;
	flex-direction: column;
}
.body > text{
	color: #8a8a8a;
	margin-top: 50rpx;
}

/* button */
.footer{
  align-items: center;
  margin-top: 550rpx;
}
.content > view:nth-last-child(1) > button{
  background-color: #2b82e3;
  width: 95%;
  border-radius: 50rpx;
  color: #fff;
  font-size: 45rpx;
}

