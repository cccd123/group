.content{
	padding: 30rpx 40rpx 20rpx 40rpx;
	height: 100vh;
}


.header text{
	color: #000;
	font-size: 30rpx;
}

.body{
	margin-top: 30rpx;
	width: 100%;
}

.body textarea{
	width: 94%;
	background-color: #FFF;
	border-radius: 20rpx;
	padding: 20rpx 20rpx;
}

.main {
	width: 100%;
	margin-top: 30rpx;
	height: 100rpx;
	background-color: #fff;
	border-radius: 30rpx;
	display: flex; 
	align-items: center;  
}

.main text {
    display: flex; 
		align-items: center; 
		margin-left: 20rpx;
}

.main input{
	display: flex; 
	align-items: center; 
	margin-left: 20rpx;
	background-color: #f0f0f0;
	height: 70rpx;
	border-radius: 20rpx;
	width: 460rpx;
	padding-left: 15rpx;
}

.footer{
	width: 100%;
	margin-top: 400rpx;
	
}
.footer button{
	margin-bottom: 10rpx;
	width: 100%;
	border-radius: 30rpx;
	color: #fff;
	background-color: rgb(0, 177, 38);
}