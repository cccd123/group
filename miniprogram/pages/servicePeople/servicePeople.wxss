.content{
	padding: 0 30rpx;
	display: flex;
	flex-direction: column;
}

.content > .content-Help{
	width: 90%;
	display: flex;
	background-color: #fff;
	margin-top: 50rpx;
	height: 160rpx;
	padding: 30rpx 30rpx;
	border-radius: 50rpx;
	justify-content: space-between;
	align-items: center;
}
.content > .content-Help > image{
	height: 100rpx;
	width: 100rpx;
}
.content > .content-Help > text{
	font-size: 50rpx;
	font-weight: bold;
}
.content > .content-Help > text:nth-child(2){
	margin-right: 50rpx;
}


/* 电话帮助 */
.manualComplaint-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5); /* 半透明背景 */
  z-index: 999;
}

.manualComplaint {
  background-color: #fff;
  padding: 20px;
  border-radius: 30px;
  width: 80%;
  max-width: 300px;
  text-align: center;
}

.manualComplaint > view:nth-child(1){
	background-color: #fff;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	padding: 50rpx 40rpx 60rpx 40rpx;
	border-radius: 50rpx;
}

.manualComplaint view:nth-child(1) > image{
	height: 100rpx;
	width: 100rpx;
}

.manualComplaint view:nth-child(1) > view:nth-child(2){
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	margin-top: 50rpx;
}

.manualComplaint view:nth-child(1) > view:nth-child(2) > text:nth-child(1),.content view:nth-child(1) > view:nth-child(2) > text:nth-child(2){
	font-size: 35rpx;
	font-weight: bold;
	margin-top: 15rpx;
}
.manualComplaint view:nth-child(1) > view:nth-child(2) > text:nth-child(3){
	margin-top: 30rpx;
	font-size: 55rpx;
	font-weight: bold;
}

.manualComplaint > view:nth-child(1) > view:nth-child(3){
	margin-top: 80rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-bottom: 30rpx;
}

.manualComplaint > view:nth-child(2){
	margin-top: 80rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}
.manualComplaint > view:nth-child(2) > image{
	width: 120rpx;
	height: 120rpx;
}